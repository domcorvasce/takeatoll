{
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "App\\Controllers\\": "src/Controllers",
            "App\\Jobs\\": "src/Jobs",
            "App\\Models\\": "src/Models"
        }
    },

    "scripts": {
        "lint": "php-cs-fixer fix src",
        "test": "phpunit tests",
        "gen-docs": "openapi public src -l --output swagger.json"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.8",
        "fakerphp/faker": "^1.19"
    },

    "require": {
        "guzzlehttp/psr7": "^2",
        "zircote/swagger-php": "^4.2",
        "slim/slim": "^4.10"
    }
}
